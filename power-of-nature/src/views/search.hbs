<main>

    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    <!-- <div>
        <div class="errorContainer">
            <p>Error</p>
        </div>
    </div> -->

    <section class="event-search">
        <h1 id="title">Search</h1>

        <form class="search-form" method="GET">
            <input type="text" class="search-event" name="name" placeholder="Search by Name...">
            <select id="type" name="type">
                <option value="Wildfire">Wildfire</option>
                <option value="Flood">Flood</option>
                <option value="Earthquake">Earthquake</option>
                <option value="Hurricane">Hurricane</option>
                <option value="Drought">Drought</option>
                <option value="Tsunami">Tsunami</option>
                <option value="Other">Other</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">

                {{#if disasters.length}}
                    {{#each disasters}}
                    <div class="event">
                        <div class="img">
                            <img src="{{imageUrl}}">
                        </div>
                        <div class="event-info">
                            <h1>{{name}}</h1>
                            <p><span>Location: </span>{{location}}</p>
                            <p><span>Type: </span>{{type}}</p>
                        </div>

                        <a href="/disaster/{{_id}}/details" class="btn-details">Details</a>
                    </div>
                    {{/each}}
                {{else}}
                    <div class="no-match">
                        <p>No match was found!</p>
                    </div>
                {{/if}}

            </div>

        </div>
    </section>
</main>
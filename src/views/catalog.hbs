<section class="catalog">
    <h1 id="title"><span>Power of Nature</span></h1>
    <div class="item-list">

        {{#if formattedDisasters.length}}
            {{#each formattedDisasters}}
            <div class="event">
                <div class="img">
                    <img src="{{imageUrl}}">
                </div>
                <div class="event-info">
                    <h1>{{name}}</h1>
                    <p><span>Location: </span>{{location}}</p>
                    <p><span>Type: </span>{{type}}</p>
                </div>

                <a href="/disaster/{{_id}}/details" class="btn-details">Details</a>
            </div>
            {{/each}}
        {{else}}
            <div class="no-event">
                <p>There are no events found yet!</p>
            </div>
        {{/if}}

    </div>
    
</section>
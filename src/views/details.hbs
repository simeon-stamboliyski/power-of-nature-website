<main>

    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    <!-- <div>
        <div class="errorContainer">
            <p>Error</p>
        </div>
    </div> -->

    <section id="details-info">
        <h1>Details</h1>
        <div class="image">
            <img src="{{disaster.imageUrl}}">
        </div>

        <div class="info">
            <div class="text">
                <h1 id="name">{{disaster.name}}</h1>
                <h3 id="location">Location: {{disaster.location}}</h3>
                <p id="type">Type: {{disaster.type}}</p>
                <p id="year"><span>Year of the Event: {{disaster.year}}</span></p>
                <p id="interested">Interested: {{interestedUsersCount}}</p>
                <p id="description">{{disaster.description}}</p>
            </div>
            <div class="product-btn">
                {{#if isCreator}}
                <div class="author">
                    <a href="/disaster/{{disaster._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/disaster/{{disaster._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{/if}}

                {{#if user}}
                    {{#unless isCreator}}
                        {{#if isInterested}}
                            <p class="interested-message">You've already been interested in this event!</p>
                        {{else}}
                            <form action="/disaster/{{disaster._id}}/interested" method="POST">
                                <button type="submit" class="btn-interested">Interested</button>
                            </form>
                        {{/if}}
                    {{/unless}}
                {{/if}}
            </div>
        </div>
    </section>
</main>